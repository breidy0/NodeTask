<!DOCTYPE html>
html(lang="es")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        link(rel="stylesheet", href='/static/css/style.css')
        link(rel="stylesheet", href='/static/css/all.min.css')
        <link href="https://fonts.googleapis.com/css2?family=Saira+Stencil+One&display=swap" rel="stylesheet">
        
        title= nombrePagina
    body
        header.header
            h1 UpTasks
            -if (user)
                h4= user.userName
            form(action="/sessions?_method=DELETE" method="POST")
                input(type="submit" value="Cerrar sesi√≥n" class='btn btnCerrar')
        div.wrapper
            div.sidebar
                ul
                    //button(class='btn btnCrear') Crear Proyecto
                    a(href="/projects/new" class='btn btnCrear') Crear Proyecto
                    -if(projects)
                        each projecto in projects
                            li
                                a(href= `/projects/${projecto.url}`)= projecto.name
                    
        block contenido
        script(src="/static/dist/bundle.js")
