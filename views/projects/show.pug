extends ../layout

block contenido
    .contenido-principal
        h1 #{nombrePagina} - #{project.name}

        form.agregar-tarea(action=`/projects/${project.url}` method="POST")
            .campo
                label(for="task") Tarea:
                input.nombre-tarea(type="text" name="task" placeholder="Nombre Tarea")
            .campo.enviar
                input.boton.nueva-tarea(type="submit" value="Agregar") 

        //- pre= vardump(tareas)

        .listado-pendientes
            ul
                if tasks.length
                each task in tasks
                    li.tarea(data-tarea=task.id)
                        p= task.name
                        .acciones
                            if task.estado
                                i.far.fa-check-circle.completo
                            else 
                                i.far.fa-check-circle
                            i.fas.fa-trash  
                else 
                    p No hay tareas en este proyecto  



        //- pre= vardump(tareas)

        // Avance del Proyecto
        .avance 
            h2 Avance del Proyecto
            #barra-avance.barra-avance
                #porcentaje.porcentaje


        // Acciones que se pueden realizar
        .contenedor-acciones
            a(href=`/projects/${project.id}/edit` class="boton") Editar Proyecto
            button#eliminar-proyecto(data-proyecto-url=project.url type="button" class="boton eliminar") Eliminar Proyecto

